<UserControl x:Class="Controls.RestoreSizeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="50" Width="50" BorderThickness="0" Background="{x:Null}" MinWidth="50" MinHeight="50" ScrollViewer.VerticalScrollBarVisibility="Disabled" ToolTip="Restore Size">

    <Grid Margin="1" MinWidth="48" MinHeight="48" ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Ellipse x:Name="ellipse" Stroke="#FF00ADEE" StrokeThickness="4" MinWidth="48" MinHeight="48" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        <Rectangle x:Name="rectangle" Margin="14,16.5" Stroke="#FF00ADEE" StrokeThickness="3" RadiusX="0.5" RadiusY="0.5" MinWidth="20" MinHeight="15" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
        <Button x:Name="btnRestoreSize" Margin="0" BorderThickness="0" Background="White" Opacity="0" MinWidth="48" MinHeight="48" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
    </Grid>
</UserControl>
